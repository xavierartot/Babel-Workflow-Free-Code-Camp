//- mixins.jade
mixin script(src)
  script(type='application/javascript', src=src)
mixin style(href)
  link(rel='stylesheet', type='text/css', href=href)

doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    +style('https://fonts.googleapis.com/css?family=Roboto:100')
    +style('style.css') 
    title FFC - Simon Game
  body
    div.container
      h1 Free code Camp - Simon Game

    footer
      div.thx 
        | Made with 
        span(class='footer__heart' aria-label="heart icon") ♥️  
        | by Xavier Artot

    +script('script.js')

